
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Products</h1>
<style>
    table {
        margin-top: 10px;
    }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
@* Veri Ekleme Butonu *@ <button class="btn btn-outline-primary" id="addBtn">Ekle</button>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ürün Adı</th>
            <th>Kategori Id</th>
            <th>Marka Id</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody id="table-body">
        @*Buraya jquery ile veriler getirilecek*@
    </tbody>
</table>

@* Veri Ekleme Modal ı *@
<div class="modal fade modal" id="AddModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title">Ürün Ekle</h1>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group">

                        <label>Ürün Adı</label>
                        <input type="text" class="form-control" id="add_name" />
                        <label>Kategori Id</label>
                        <input type="text" class="form-control" id="add_category" />
                        <label>Marka Id</label>
                        <input type="text" class="form-control" id="add_brand" />
                        <label>Açıklama</label>
                        <input type="text" class="form-control" id="add_description" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-primary" id="saveBtn" onclick="AddData();">Kaydet</button>
            </div>

        </div>

    </div>

</div>


@* Veri Güncelleme Modalı *@
<div class="modal fade modal" id="UpdateMdl">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title">Güncelle</h1>
                <button class="btn-close text-danger" data-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group">
                        <label>Id</label>
                        <input type="text" class="form-control" id="upd_Id" disabled="disabled" />
                        <label>Ürün Adı</label>
                        <input type="text" class="form-control" id="upd_name" />
                        <label>Kategori Id</label>
                        <input type="text" class="form-control" id="upd_category" />
                        <label>Marka Id</label>
                        <input type="text" class="form-control" id="upd_brand" />
                        <label>Açıklama</label>
                        <input type="text" class="form-control" id="upd_description" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-primary" id="updateSaveBtn" onclick="UpdateData()">Kaydet</button>
            </div>

        </div>

    </div>

</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
<script src="~/js/product.js"></script>


